<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>

    <div style="width: 30%; margin: 20px auto;">
        <form  action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input class="form-control" type="text" name="campground[image]" id="image" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <label for="loc">Location</label>
                <input class="form-control" type="text" name="campground[loc]" id="loc" value="<%= campground.loc %>">
            </div>
            <div class="form-group">
                <label for="desc">Description</label>
                <input class="form-control" type="text" name="campground[desc]" id="desc" value="<%= campground.desc %>">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" name="campground[price]" id="price" value="<%= campground.price %>" min="0" step="0.01" required>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
        </form>

        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
